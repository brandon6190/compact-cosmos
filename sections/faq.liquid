<h2>{{section.settings.heading}}</h2>

{% for block in section.blocks %}
    {% if block.type == 'QA' %}
        <h2>{{block.settings.question}}</h2>
        <p>{{block.settings.answer}}</p>  
    {% elsif block.type == 'headline' %}
        <h3>{{block.settings.title}}</h3>
    {% endif %}
{% endfor %}

{% schema %}
{
    "name": "Customer QA",
    "settings": [
        {
            "type": "text",
            "label": "Heading for FAQ",
            "id": "heading"
        }
    ],
    "blocks": [
        {
            "type": "QA",
            "name": "Question/Answer",
            "settings": [
                {
                    "type": "text",
                    "label": "Title (internal use only)",
                    "id": "title"
                },
                {
                    "type": "text",
                    "label": "Question",
                    "id": "question"
                },
                {
                    "type": "richtext",
                    "label": "Answer",
                    "id": "answer"
                }
            ]
        },
        {
            "type": "headline",
            "name": "Headline",
            "settings": [
                {
                    "type": "text",
                    "label": "Headline for Questions",
                    "id": "title"
                }
            ]
        }
    ]
}
{% endschema %}